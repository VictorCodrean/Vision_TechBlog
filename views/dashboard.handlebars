{{> header}}

<div class="row m-4 justify-content-center">
    <h3>Hello, {{user.first_name}} {{user.last_name }}</h3>
</div>

<div class="row d-flex justify-content-center">
    {{#if user.post.length}}
    <div class="col-10 d-flex justify-content-center ">
        <div class="card-deck ">
            {{#each user.posts as |post|}}
            <div class="card mb-4 card-hover" style="background-color: #d9b382 ;">
                <div class="card-header" style="background-color: #b39064 ; color: aliceblue">
                    <h4>Victor</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-user-secret pr-2"></i>Manager</h5>
                    <ul class="list-group my-list">
                        <li class="list-group-item" style="background-color: beige;">
                            <i class="fas fa-id-badge pr-2"></i>ID: 7
                        </li>
                        <li class="list-group-item" style="background-color: beige;">
                            <i class="fas fa-envelope-square pr-2"></i>Email: <a
                                href="mailto:codreanvictor@gmail.com">codreanvictor@gmail.com</a>
                        </li>
                        <li class="list-group-item" style="background-color: beige;">
                            <i class="far fa-building pr-2"></i>Office number: 5
                        </li>
                    </ul>
                </div>
            </div>
            {{/each}}
        </div>
    </div>

    {{else}}

    <div class="jumbotron  m-5" style="background-color: #b39064 ; color: aliceblue">

        <h2 class="text-center"> Dashboard</h2>
        <p class="text-center">You don't have any posts, yet</p>
        <a class="w-100 btn btn-info" href="/api/post">Add new Post</a>

    </div>

    {{/if}}
</div>